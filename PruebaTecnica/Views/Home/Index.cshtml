@model IEnumerable<PruebaTecnica.Models.Cartilla>

@{
    ViewData["Title"] = "Home Page";
}
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Uploads/@item.Foto" asp-append-version="true" alt="@item.Titulo" />
            <div class="card-body">
                <h5 class="card-title">@item.Titulo</h5>
                <p>@item.Descripcion</p>
                <a asp-controller="Cartillas" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><p>@item.TextoBoton</a>
            </div>
        </div>
    }
}
else
{
<h4>No hay Registro</h4>
}

