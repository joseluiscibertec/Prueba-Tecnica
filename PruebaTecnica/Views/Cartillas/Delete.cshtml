@model PruebaTecnica.ViewModels.CartillaViewModels

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-danger">
    <h3>¿Estás seguro de que quieres borrar esto?</h3>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Eliminar Cartilla</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CartillaFoto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TextoBoton)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Link)
            </dt>
            <dd class="col-sm-10">
                <img src="@FileLocation.RetriveFileFromFolder@Model.ExistingImage" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Eliminar</button>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Editar</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Volver a la lista</a>
        </form>
    </div>
</div>

