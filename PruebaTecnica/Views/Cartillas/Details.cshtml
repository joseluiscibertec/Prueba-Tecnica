@model PruebaTecnica.Models.Cartilla

@{
    ViewData["Title"] = "Detalles";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Cartilla Detalles</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class="col-sm-10">
                <img src="@FileLocation.RetriveFileFromFolder@Model.Foto" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TextoBoton)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TextoBoton)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Link)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Link)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Eliminar</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i>Volver a la lista</a>
        </div>
    </div>
</div>

